>> shfill

% --- Padrão ---
/pdict 10 dict def
pdict begin
  /PatternType 1 def
  /PaintType 1 def
  /TilingType 1 def
  /BBox [0 0 20 20] def
  /XStep 20 def
  /YStep 20 def
  /PaintProc {
    % Quadrado vermelho
    newpath
    0 0 moveto 10 0 lineto 10 10 lineto 0 10 lineto
    closepath
    1 0 0 setrgbcolor
    fill

    % Quadrado verde
    newpath
    10 10 moveto 20 10 lineto 20 20 lineto 10 20 lineto
    closepath
    0 1 0 setrgbcolor
    fill
  } def
end
/pat1 pdict makepattern def

gsave
  pat1 setpattern
  newpath
  250 200 50 0 360 arc
  closepath
  fill
grestore

% Define o padrão level 3
<<
  /PatternType 1
  /PaintType 1
  /TilingType 1
  /BBox [0 0 60 60]
  /XStep 60
  /YStep 60
  /PaintProc {
    newpath
    0 0 moveto 30 0 rlineto 0 30 rlineto -30 0 rlineto
    0.5 0.5 0 setrgbcolor
    closepath
    fill

    newpath
    30 30 moveto 30 0 rlineto 0 30 rlineto -30 0 rlineto
    0.5 0 0.5 setrgbcolor
    closepath
    fill
  }
>> matrix makepattern /MyPattern exch def

gsave
  MyPattern setpattern
  newpath
  150 200 40 0 360 arc
  closepath
  fill
grestore


% --- Funções, definição e execução ---
%% x y w h highlight
/highlight {
        4 dict begin
        /h exch def
        /w exch def
        /y exch def
        /x exch def
        gsave
        newpath
        x y moveto
        0 h rlineto     % up to left corner
        w 0 rlineto     % to upper right corner
        0 h neg rlineto % to lower right corner
        w neg 0 rlineto % back home to lower left corner
        closepath
        .95 .83 .82 setrgbcolor
        fill
        grestore
        end
} def

